{
  "name": "edbs",
  "description": "Elite Dangerous Bind Switcher",
  "version": "2.0.0",
  "main": "src/index.js",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.7",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^2.8.8"
  },
  "scripts": {
    "build": "npm run eslint && npm run esbuild && npm run pkg",
    "cleanup": "rm -rf ./dist && rm -rf ./bin",
    "esbuild": "esbuild ./src/index.js --bundle --minify --platform=node --target=node16 --outfile=dist/bundle.js",
    "eslint": "eslint ./src/**/*.js",
    "pkg": "pkg ./dist/bundle.js --config ./package.json",
    "test": "jest --forceExit"
  },
  "author": "benjammin4dayz",
  "license": "MIT",
  "pkg": {
    "outputPath": "bin",
    "targets": [
      "latest-win-x64",
      "latest-linux"
    ]
  }
}
